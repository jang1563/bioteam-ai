# BioTeam-AI Environment Variables
# Copy this to .env and fill in your values

# === Runtime Environment ===
APP_ENV=development

# === Required ===
ANTHROPIC_API_KEY=sk-ant-...

# === Optional: External APIs ===
NCBI_API_KEY=
NCBI_EMAIL=
S2_API_KEY=

# === Auth (empty = dev mode, no auth) ===
BIOTEAM_API_KEY=
ENFORCE_AUTH_IN_PRODUCTION=true
# SSE stream auth tokens are derived from BIOTEAM_API_KEY (no extra env required)

# === CORS (comma-separated origins) ===
CORS_ORIGINS=http://localhost:3000

# === Database ===
DATABASE_URL=sqlite:///data/bioteam.db

# === Model Overrides (optional) ===
MODEL_OPUS=claude-opus-4-6
MODEL_SONNET=claude-sonnet-4-6
MODEL_HAIKU=claude-haiku-4-5-20251001

# === Langfuse (empty = disabled) ===
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
LANGFUSE_HOST=http://localhost:3001

# === Code Execution Sandbox (optional) ===
# Requires Docker Desktop running. Set DOCKER_ENABLED=false to skip (agents output code only).
DOCKER_ENABLED=true
DOCKER_TIMEOUT_SECONDS=120
DOCKER_MEMORY_LIMIT=512m
# Use pre-built images for full bioinformatics packages (see backend/app/execution/containers/):
# DOCKER_IMAGE_PYTHON=bioteam-python-analysis
# DOCKER_IMAGE_R=bioteam-rnaseq

# === Open Peer Review Corpus (eLife/PLOS â€” requires internet) ===
# Enabled by default; set to false to skip corpus-assisted review annotation
PEER_REVIEW_CORPUS_ENABLED=true

# === MCP Healthcare Connectors (optional) ===
# Set MCP_ENABLED=true to activate ClinicalTrials / WHO / FDA connectors
# MCP_ENABLED=false

# === Schedulers (optional) ===
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
DIGEST_ENABLED=true
DIGEST_CHECK_INTERVAL_MINUTES=60
INTEGRITY_AUDIT_ENABLED=true
INTEGRITY_AUDIT_INTERVAL_HOURS=24
